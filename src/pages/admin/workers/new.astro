---
import Layout from "@/layouts/Layout.astro";
import AdminNavbar from "@/components/admin/AdminNavbar";
import WorkerForm from "@/components/admin/workers/AdminWorkerForm";
---

<Layout title="Dodaj opiekuna">
  <AdminNavbar />
  <main class="mx-auto max-w-3xl px-4 py-6" aria-labelledby="page-title">
    <h1 id="page-title" class="text-2xl font-semibold tracking-tight">Dodaj opiekuna</h1>
    <p class="mt-2 text-sm text-neutral-600 dark:text-neutral-400">
      Wprowadź dane opiekuna i zapisz, aby dodać go do listy.
    </p>
    <div class="mt-6">
      <WorkerForm client:load mode="create" />
    </div>
  </main>
</Layout>
